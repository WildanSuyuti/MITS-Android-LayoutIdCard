<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#000"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.emwees.belajarlayoutidcard.MainActivity">

    <ImageView
        android:id="@+id/img_v"
        android:src="@drawable/up_word_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        />


    <TextView
        android:id="@+id/txt_vnama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Muhammad Wildan Suyuti"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/img_v"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#FFF"
        />

    <TextView

        android:id="@+id/txt_vpekerjaan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Android Developer"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txt_vnama"
        android:layout_alignParentBottom="true"
        />

    <ImageView
        android:id="@+id/img_vphone"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/phone_icon"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="150dp"
        android:layout_marginRight="4dp"
        android:layout_toLeftOf="@+id/txt_vphone"
        />

    <TextView
        android:id="@+id/txt_vphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+6285234479684"
        android:textColor="#FFF"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_above="@+id/txt_vpekerjaan"
        android:layout_marginBottom="153dp"
        android:textStyle="bold"
        android:textSize="15sp"

        />



    <TextView
        android:id="@+id/txt_vmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="em.wildan.es@gmail.com"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="#FFF"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="130dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/txt_vphone"
        />

    <ImageView
        android:id="@+id/img_vmail"
        android:src="@drawable/mail_white"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="121dp"
        android:layout_toLeftOf="@+id/txt_vmail"
        />

    <TextView
        android:id="@+id/txt_vup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upward Project"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"

        />
    <TextView
        android:id="@+id/txt_valamat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jl KH Imam Syafi'i No 45 Sempu Banyuwangi"
        android:textColor="#FFF"
        android:textSize="15sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>
